# Database Configuration
# PostgreSQL: postgresql://user:password@localhost:5432/database_name
# MySQL: mysql://user:password@localhost:3306/database_name
# SQLite: file:./dev.db
DATABASE_URL=postgresql://user:password@localhost:5432/esse_aqui_midia

# JWT Configuration
# Mude para uma chave secreta forte em produção!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# URLs separadas por vírgula
CORS_ORIGIN=http://localhost:5173,http://localhost:3001,https://esse-aqui-midia-frontend.vercel.app

# API Configuration
API_VERSION=v1
LOG_LEVEL=debug
